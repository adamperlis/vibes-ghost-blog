{{!< default}}
{{!-- Podcast page template - create a page with slug "podcast" to use this template --}}

{{#post}}

<main class="gh-main">
    {{!-- Header Section --}}
    <article class="gh-article {{post_class}}">
        <header class="gh-article-header gh-canvas">
            <div class="vibes-podcast-header">
                {{#if feature_image}}
                    <div class="vibes-podcast-image">
                        <img 
                            src="{{img_url feature_image size="s"}}" 
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        >
                    </div>
                {{/if}}
                <div class="vibes-podcast-header-content">
                    <h1 class="gh-article-title vibes-article-title">{{title}}</h1>
                    {{#if custom_excerpt}}
                        <p class="gh-article-excerpt vibes-article-excerpt">{{custom_excerpt}}</p>
                    {{else}}
                        <p class="gh-article-excerpt vibes-article-excerpt">Deep conversations with builders, creators, and innovators shaping the future of work and technology.</p>
                    {{/if}}
                </div>
            </div>
        </header>

        {{!-- Optional page content --}}
        {{#if content}}
            <section class="gh-content vibes-content gh-canvas">
                {{content}}
            </section>
        {{/if}}
    </article>

    {{!-- Podcast Episodes Section --}}
    <section class="vibes-podcast-section gh-outer">
        <div class="vibes-post-inner gh-inner">
            
            <div class="vibes-section-header">
                <h2 class="vibes-section-title">LATEST EPISODES</h2>
                <div class="vibes-section-line"></div>
            </div>

            <div class="vibes-podcast-grid">
                {{#get "posts" filter="tag:podcast" include="authors,tags" limit="12"}}
                    {{#foreach posts}}
                        <article class="vibes-podcast-episode">
                            <div class="vibes-episode-content">
                                {{!-- Episode artwork --}}
                                {{#if feature_image}}
                                    <figure class="vibes-episode-artwork">
                                        <a href="{{url}}">
                                            <img 
                                                src="{{img_url feature_image size="m"}}" 
                                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" 
                                                loading="lazy"
                                            >
                                        </a>
                                    </figure>
                                {{/if}}

                                <div class="vibes-episode-main">
                                    {{!-- Episode header --}}
                                    <div class="vibes-episode-header">
                                        {{#if primary_tag}}
                                            <span class="vibes-post-tag vibes-episode-tag">{{primary_tag.name}}</span>
                                        {{/if}}
                                        <h3 class="vibes-episode-title">
                                            <a href="{{url}}">{{title}}</a>
                                        </h3>
                                        <div class="vibes-episode-meta">
                                            <time class="vibes-post-date" datetime="{{date format="YYYY-MM-DD"}}">
                                                {{date format="DD MMM YYYY"}}
                                            </time>
                                            {{#if reading_time}}
                                                <span class="vibes-episode-duration">{{reading_time}} min read</span>
                                            {{/if}}
                                        </div>
                                    </div>

                                    {{!-- Episode excerpt --}}
                                    {{#if excerpt}}
                                        <p class="vibes-episode-excerpt">{{excerpt words="25"}}</p>
                                    {{/if}}

                                    {{!-- Episode actions --}}
                                    <div class="vibes-episode-actions">
                                        <a href="{{url}}" class="gh-button" style="padding: 8px 12px; max-width: 100px;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M11.596 8.697l-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z"/>
                                            </svg>
                                            Listen
                                        </a>
                                        <div class="vibes-podcast-platforms">
                                            <span class="vibes-platforms-text">Listen on:</span>
                                            {{#if @custom.podcast_spotify_url}}
                                                <a href="{{@custom.podcast_spotify_url}}" class="vibes-platform-link" rel="noopener" target="_blank" title="Listen on Spotify">
                                                    {{> "icons/spotify"}}
                                                </a>
                                            {{/if}}
                                            {{#if @custom.podcast_youtube_url}}
                                                <a href="{{@custom.podcast_youtube_url}}" class="vibes-platform-link" rel="noopener" target="_blank" title="Listen on YouTube">
                                                    {{> "icons/youtube"}}
                                                </a>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    {{/foreach}}
                {{else}}
                    {{!-- No episodes fallback --}}
                    <div class="vibes-no-episodes">
                        <h3 class="vibes-section-title">Coming Soon</h3>
                        <p class="vibes-card-excerpt">Our podcast episodes will be available here soon. Stay tuned for deep conversations with builders and innovators.</p>
                    </div>
                {{/get}}
            </div>

            {{!-- Subscribe Section --}}
            <section class="vibes-podcast-subscribe">
                <div class="vibes-subscribe-content">
                    <h3 class="vibes-section-title">Never Miss an Episode</h3>
                    <p class="vibes-card-excerpt">Subscribe to get notified when new episodes drop.</p>
                    
                    {{!-- Email subscription form --}}
                    {{> "email-subscription" email_field_id="podcast-email-subscription"}}
                    
                    {{!-- Platform subscription links --}}
                    <div class="vibes-subscribe-platforms">
                        <span class="vibes-platforms-text">Or subscribe on:</span>
                        <div class="vibes-platform-links">
                            {{#if @custom.podcast_spotify_url}}
                                <a href="{{@custom.podcast_spotify_url}}" class="vibes-platform-button" rel="noopener" target="_blank" aria-label="Subscribe on Spotify">
                                    {{> "icons/spotify"}}
                                    <span>Spotify</span>
                                </a>
                            {{/if}}
                            {{#if @custom.podcast_youtube_url}}
                                <a href="{{@custom.podcast_youtube_url}}" class="vibes-platform-button" rel="noopener" target="_blank" aria-label="Subscribe on YouTube">
                                    {{> "icons/youtube"}}
                                    <span>YouTube</span>
                                </a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </section>

</main>

{{/post}}
