<footer class="gh-footer gh-outer">
    <div class="gh-footer-inner gh-inner">

        <div class="gh-footer-bar">
            <span class="gh-footer-logo vibes-footer-logo">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    {{@site.title}}
                {{/if}}
            </span>
            <nav class="gh-footer-menu">
                {{navigation type="secondary"}}
            </nav>
            <div class="gh-footer-copyright vibes-footer-text">
                Powered by <a href="https://b150.ai" target="_blank" rel="noopener">B150</a>
            </div>
        </div>

        {{!-- {{#if @site.members_enabled}}
            {{#unless @member}}
                <section class="gh-footer-signup">
                    <h2 class="gh-footer-signup-header vibes-section-title">
                        {{@site.title}}
                    </h2>
                    <p class="gh-footer-signup-subhead vibes-footer-description">
                        {{@site.description}}
                    </p>
                    {{> "email-subscription" email_field_id="footer-email"}}
                </section>
            {{/unless}}
        {{/if}} --}}

    </div>
</footer>