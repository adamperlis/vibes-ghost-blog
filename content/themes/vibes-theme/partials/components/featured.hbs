{{!-- Always show featured section --}}
{{#get "posts" filter="featured:true" include="authors" limit=6 as |featured|}}
    {{#if featured}}
        <section class="vibes-featured gh-outer">
            <div class="vibes-featured-inner gh-inner">
                <div class="vibes-section-header">
                    <h2 class="vibes-section-title">FEATURED</h2>
                    <div class="vibes-section-line"></div>
                </div>
                
                <div class="vibes-featured-grid">
                    {{#foreach featured}}
                        <article class="vibes-featured-card">
                            {{#if feature_image}}
                                <figure class="vibes-featured-card-image {{#match @custom.featured_image_aspect_ratio "1:1"}}aspect-ratio-1-1{{/match}}{{#match @custom.featured_image_aspect_ratio "3:2"}}aspect-ratio-3-2{{/match}}{{#match @custom.featured_image_aspect_ratio "16:9"}}aspect-ratio-16-9{{/match}}">
                                    <a href="{{url}}">
                                        <img src="{{img_url feature_image size="s"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy">
                                    </a>
                                </figure>
                            {{/if}}
                            <div class="vibes-featured-card-content">
                                <h3 class="vibes-featured-card-title"><a href="{{url}}">{{title}}</a></h3>
                                <time class="vibes-post-date">{{date format="MMM DD, YYYY"}}</time>
                            </div>
                        </article>
                    {{/foreach}}
                </div>
            </div>
        </section>
    {{else}}
        {{!-- If no featured posts, show recent posts --}}
        {{#get "posts" include="authors" limit=6 as |recent|}}
            <section class="vibes-featured gh-outer">
                <div class="vibes-featured-inner gh-inner">
                    <div class="vibes-section-header">
                        <h2 class="vibes-section-title">FEATURED</h2>
                        <div class="vibes-section-line"></div>
                    </div>
                    
                    <div class="vibes-featured-grid">
                        {{#foreach recent}}
                            <article class="vibes-featured-card">
                                {{#if feature_image}}
                                    <figure class="vibes-featured-card-image {{#match @custom.featured_image_aspect_ratio "1:1"}}aspect-ratio-1-1{{/match}}{{#match @custom.featured_image_aspect_ratio "3:2"}}aspect-ratio-3-2{{/match}}{{#match @custom.featured_image_aspect_ratio "16:9"}}aspect-ratio-16-9{{/match}}">
                                        <a href="{{url}}">
                                            <img src="{{img_url feature_image size="s"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy">
                                        </a>
                                    </figure>
                                {{/if}}
                                <div class="vibes-featured-card-content">
                                    <h3 class="vibes-featured-card-title"><a href="{{url}}">{{title}}</a></h3>
                                    <time class="vibes-post-date">{{date format="MMM DD, YYYY"}}</time>
                                </div>
                            </article>
                        {{/foreach}}
                    </div>
                </div>
            </section>
        {{/get}}
    {{/if}}
{{/get}}