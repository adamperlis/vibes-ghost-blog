{{!-- Vibes CTA Section --}}
<section class="vibes-cta gh-outer">
    <video class="vibes-cta-video" autoplay muted loop playsinline>
        <source src="{{asset "images/[BG] What will you build today- Copy 01.webm"}}" type="video/webm">
        <source src="{{asset "images/[BG] What will you build today- Copy 01.mp4"}}" type="video/mp4">
    </video>
    <div class="vibes-cta-inner">
