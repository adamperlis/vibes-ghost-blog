{{!< default}}
{{!-- All Articles page template - create a page with slug "all-articles" to use this template --}}

{{#post}}

<main class="gh-main">
    {{!-- Header Section --}}
    <article class="gh-article {{post_class}}">
        <header class="gh-article-header gh-canvas">
            <h1 class="gh-article-title vibes-article-title">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="gh-article-excerpt vibes-article-excerpt">{{custom_excerpt}}</p>
            {{else}}
                <p class="gh-article-excerpt vibes-article-excerpt">Explore all our articles, insights, and stories from the world of technology and innovation.</p>
            {{/if}}
        </header>

        {{!-- Optional page content --}}
        {{#if content}}
            <section class="gh-content vibes-content gh-canvas">
                {{content}}
            </section>
        {{/if}}
    </article>

    {{!-- All Articles Section --}}
    <section class="vibes-all-articles-section gh-outer">
        <div class="vibes-post-inner gh-inner">
            
            <div class="vibes-posts-grid">
                {{#get "posts" include="authors,tags" limit="100"}}
                    {{#foreach posts}}
                        <article class="vibes-grid-post">
                            {{#if feature_image}}
                                <figure class="vibes-grid-image {{#match @custom.grid_image_aspect_ratio "1:1"}}{{/match}}{{#match @custom.grid_image_aspect_ratio "3:2"}}aspect-ratio-3-2{{/match}}{{#match @custom.grid_image_aspect_ratio "16:9"}}aspect-ratio-16-9{{/match}}">
                                    <a href="{{url}}">
                                        <img src="{{img_url feature_image size="m"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy">
                                    </a>
                                </figure>
                            {{/if}}
                            <div class="vibes-grid-content">
                                <h3 class="vibes-grid-title"><a href="{{url}}">{{title}}</a></h3>
                                <time class="vibes-post-date">{{date format="MMM DD, YYYY"}}</time>
                            </div>
                        </article>
                    {{/foreach}}
                {{else}}
                    {{!-- No articles fallback --}}
                    <div class="vibes-no-results">
                        <h3 class="vibes-section-title">No Articles Found</h3>
                        <p class="vibes-card-excerpt">There are no articles to display at the moment.</p>
                    </div>
                {{/get}}
            </div>

        </div>
    </section>

</main>

{{/post}} 